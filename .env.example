# Environment Configuration for CogniForge

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Application Settings
APP_NAME=CogniForge
APP_VERSION=0.1.0
DEBUG=true

# PyBullet Configuration
PYBULLET_GUI=false
PYBULLET_OPTIONS=--background_color_red=1.0 --background_color_green=1.0 --background_color_blue=1.0

# ML/AI Settings
TORCH_DEVICE=cpu
MODEL_PATH=./models
DATA_PATH=./data

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/cogniforge.log

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost/cogniforge

# External APIs
OPENAI_API_KEY=your_openai_api_key_here
# EXTERNAL_API_URL=https://api.example.com